<body>
   <div class="container">
  <div class="jumbotron">      
<h1>Update {{fighters.fname}} {{fighters.lname}}:</h1>
</div>
<form id="update-fighter" action="/people" method="post">
<div class="form-group">
    First name: <input type="text" class="form-control" name="fname" value="{{fighters.fname}}"><br>
   
    
    Last name: <input type="text" class="form-control" name="lname" value="{{fighters.lname}}"><br>
    Country: <input type="text" class="form-control" name="country" value="{{fighters.country}}"><br>
    Age: <input type="number" class="form-control" name="age" value="{{fighters.age}}"><br>
    
    Promotion: <select name="organization" class="form-control" id="promotion-selector"> 
        {{#each promotion}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
 </div>
</form>
<button class="btn btn-primary" onclick="updatePerson({{fighters.id}})">Update</button>
  </div>

  

<!--selectPromotion refer to below in the updatePerson.js for DROP DOWN MENU-->
